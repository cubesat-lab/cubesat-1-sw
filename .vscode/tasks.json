{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/firmware/${input:fw}/cubesat-1-fw-${input:fw}"
            },
            "command": "cargo ${input:selectCargoCmd}",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "serial",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/tools"
            },
            "command": "python serial_link.py -p ${input:port}",
            "problemMatcher": [
                // TODO: Add if needed
            ]
        },
        {
            "label": "structurizr",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docker run -it --rm -p 8080:8080 -v \"${workspaceFolder}/docs:/usr/local/structurizr\" structurizr/lite",
            "problemMatcher": [
                // TODO: Add if needed
            ]
        }
    ],
    "inputs": [
        {
            "id": "fw",
            "type": "pickString",
            "description": "Which Firmware?",
            "options": [
                {"label": "ADCS", "value": "adcs"},
                {"label": "COM", "value": "com"},
                {"label": "EPS", "value": "eps"},
                {"label": "OBC", "value": "obc"},
            ]
        },
        {
            "id": "selectCargoCmd",
            "type": "pickString",
            "description": "Which cargo command?",
            "options": [
                "add",
                "bench",
                "build",
                "check",
                "clean",
                "clippy",
                "config",
                "doc",
                "fetch",
                "fix",
                "flash --chip STM32F767ZITx",
                "fmt",
                "generate-lockfile",
                "git-checkout",
                "help",
                "init",
                "install",
                "locate-project",
                "login",
                "logout",
                "metadata",
                "miri",
                "new",
                "owner",
                "package",
                "pkgid",
                "publish",
                "read-manifest",
                "remove",
                "report",
                "rm",
                "run",
                "rustc",
                "rustdoc",
                "search",
                "test",
                "tree",
                "uninstall",
                "update",
                "vendor",
                "verify-project",
                "version",
                "yank",
            ],
        },
        {
            "id": "port",
            "type": "promptString",
            "description": "Serial port",
        },
    ]
}